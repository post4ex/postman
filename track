        document.addEventListener('click', (event) => {
            // Check if the click was outside the menu button and the dropdown menu itself
            const isClickInsideMenuButton = menuButton.contains(event.target);
            const isClickInsideDropdownMenu = dropdownMenu.contains(event.target);
            
            if (!isClickInsideMenuButton && !isClickInsideDropdownMenu) {
                dropdownMenu.classList.add('hidden');
